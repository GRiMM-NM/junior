{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",        // <-- Assure-toi que ton code source est bien dans /src
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": ["node"]
  },
  "include": ["src"],         // On cible uniquement le code source
  "exclude": ["lib", "node_modules"]
}
