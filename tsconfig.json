{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",                                                      
    "customConditions": ["react-native"],             
    "types": ["react", "react-native"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
  ]
}
